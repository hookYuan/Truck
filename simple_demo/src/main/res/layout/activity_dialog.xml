<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yuan.demo.activity.one.dialog.MaterialDialogActivity">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_net_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="普通Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="列表Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_single"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="单选Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_multi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="多选Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_waiting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="等待Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_loading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="进度条Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_simple_dialog_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center"
        android:text="自定义Dialog"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:rv_backgroundColor="@color/pink500"
        app:rv_backgroundPressColor="@color/pink700"
        app:rv_cornerRadius="@dimen/size_4" />

</LinearLayout>
